<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quiz3">

    <TextView
        android:id="@+id/txtQuestion3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="@font/acme"
        android:text="@string/txtQuestion3"
        android:textAlignment="center"
        android:textColor="#9BD4E3"
        android:textSize="38sp"
        android:textStyle="bold" />

    <RadioGroup
        android:layout_width="225dp"
        android:layout_height="202dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp">

        <RadioButton
            android:id="@+id/rad31"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#9BD4E3"
            android:checked="true"
            android:fontFamily="@font/acme"
            android:text="@string/rad31"
            android:textColor="#9BD4E3"
            android:textSize="26sp" />

        <RadioButton
            android:id="@+id/rad32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#9BD4E3"
            android:fontFamily="@font/acme"
            android:text="@string/rad32"
            android:textColor="#9BD4E3"
            android:textSize="26sp" />

        <RadioButton
            android:id="@+id/rad33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#9BD4E3"
            android:fontFamily="@font/acme"
            android:text="@string/rad33"
            android:textColor="#9BD4E3"
            android:textSize="26sp" />
    </RadioGroup>

    <Button
        android:id="@+id/btnNext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp"
        android:backgroundTint="#9BD4E3"
        android:fontFamily="@font/acme"
        android:text="@string/btnSubmit"
        android:textColor="#311D0D"
        android:textSize="28sp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="244dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="129dp"
        android:contentDescription="@string/imgDescription"
        app:srcCompat="@drawable/hp_strength" />
</RelativeLayout>